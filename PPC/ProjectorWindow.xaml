<Window x:Class="AngelDLP.PPC.ProjectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AngelDLP.PPC"
        xmlns:prism="http://prismlibrary.com/" xmlns:hc="https://handyorg.github.io/handycontrol"
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d"
        Width="{Binding configWidth}" Height="{Binding configHeight}" Margin="0"
        ResizeMode="NoResize"
        Padding="0"
        Title="ProjectorWindows" Loaded="Window_Loaded" WindowStyle="None" Background="Black">
    <Grid Background="Black" Margin="0" >
        <Image x:Name="projector1_ImageContainer" Source="{Binding P1_Image}"  VerticalAlignment="Top" HorizontalAlignment="Left" Stretch="Fill"  Width="{Binding configWidth}" Height="{Binding configHeight}" Margin="0" />
    </Grid>

</Window>
